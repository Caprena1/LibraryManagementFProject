
@model BookDetails


<h2>Create a New Book</h2>
@using (Html.BeginForm("InsertBookToDatabase", "BookDetail", "Post"))
{
    <input asp-for="AuthorID" type="hidden" value="" />
    <label asp-for="FirstName" class="control-label">First Name</label>
    <input type="text" name="FirstName" class="form-control" value="" />
    <label asp-for="LastName" class="control-label">Last Name</label>
    <input type="text" name="LastName" class="form-control" value="" />
    <label asp-for="ISBN_Code" class="control-label">ISBN Code</label>
    <input type="number" name="IDBN_Code" class="form-control" />
    <label asp-for="Book_Title" class="control-label">Book Title</label>
    <input type="text" name="Book_Title" class="form-control" value="" />
    <label asp-for="Publication_year" class="control-label">Publication Year</label>
    <input type="number" name="Publication_year" class="form-control" />

    <input type="submit" value="Create Book" class="btn btn-primary" />
}
