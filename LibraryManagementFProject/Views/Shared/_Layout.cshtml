<!DOCTYPE html>
<html lang="en">
<head >
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Library Management</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" />
</head>
<body style="background-color:lightgray">
    <header>
        <div>
            <nav class="navbar navbar-expand-lg navbar-light bg-lignt">
                <a class="navbar-brand" href="#">
                    <img src="imgs/books.png" width="30" height="30" />
                    Caprena's E-Library
                </a>
                <button class="navbar-toggler ml-auto bg-warning"
                        type="button"
                        data-toggle="collapse"
                        data-target=".navbar-collapse"
                        aria-controls="navbarSupportedContent"
                        aria-expanded="false"
                        aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex flex-sm-row-reverse" id="nav1">
                    <ul class="navbar-nav mx-auto">
                        <li class="nav-item active">
                            <a class="nav-link text-dark btn btn-outline-danger" style="margin-inline: 25px" asp-area="" asp-controller="Home" asp-action="Index">Home</a>
                        </li>
                        <li class="nav-item active">
                            <a class="nav-link text-dark btn btn-outline-success" asp-area="" asp-controller="BookDetail" asp-action="Index">Book Detail</a>
                    </ul>
                </div>
            </nav>

        </div>

    </header>
    <div class="container-fluid">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <!--FOOTER-->
    <footer>
        <div id="footer1" class="container-fluid">
            <div class="row">
                <div class="col-md-12 col-md-12 col-md-12 text-center">
                    <a style="margin-inline: 50px" asp-area="" asp-controller="Home">Home</a> <a style="margin-inline: 75px" asp-action="Privacy">Privacy</a>

                </div>
            </div>
        </div>
        <div id="footer2" class="container-fluid">
            <div class="row">
                <div class="col-xs-12 col-sm-12 cold-md-12 text-center">
                    <p style="color:whitesmoke">
                        &copy All right Reversed 2021 - Caprena's
                        LibraryManagement- Final Project
                    </p>
                </div>
            </div>
        </div>

    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @RenderSection("Scripts", required: false)
</body>
</html>